BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            text: '0'
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'up'
                on_press: app.handle_increment(1)
            Button:
                text: 'down'
                on_press: app.handle_increment(-1)
